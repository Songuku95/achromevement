{
  "manifest_version": 2,
  "name": "Achromevement",
  "version": "1.0.0",
  "description": "Earn achievements by using Google Chrome",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["common.css", "content.css"],
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html"
}
