{
  "manifest_version": 2,
  "name": "Achromevement",
  "version": "1.0.0",
  "description": "Earn achievements by using Google Chrome",
  "background": {
    "persistent": false,
    "scripts": ["src/background/main.js"]
  },
  "browser_action": {
    "default_popup": "src/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["src/style/main.css", "src/style/content.css"],
      "js": ["src/content/main.js"]
    }
  ],
  "options_page": "src/options.html"
}
